{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchManagers": ["maven-wrapper"],
      "allowedVersions": "3.9.6",
      "groupName": "Maven wrapper pinned to 3.9.6"
    },
    {
      "matchPackageNames": ["org.apache.maven:maven-core"],
      "enabled": false
    },
    {
      "matchPackageNames": ["org.apache.maven:maven-plugin-api"],
      "enabled": false
    },
    {
      "matchManagers": ["maven"],
      "matchPackageNames": [
        "org.verifyica:verifyica-api",
        "org.verifyica:verifyica-engine",
        "org.verifyica:verifyica-maven-plugin",
        "org.verifyica:verifyica-tests",
        "org.verifyica:verifyica-examples"
      ],
      "enabled": true,
      "groupName": "Maven dependencies"
    },
    {
      "matchManagers": ["maven"],
      "groupName": "Maven dependencies"
    }
  ]
}
